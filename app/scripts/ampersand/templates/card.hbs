<li class="card">
  <div class="card-header">
      {{#if model.address.playground}}
        {{model.address.playground}}
      {{else}}
        {{model.address.road}}
      {{/if}}
  </div>
  <div class="card-copy">
    <p>
      Entfernung: <span data-hook="distance"></span>m
      <a href="http://maps.google.de/maps?q={{model.lat}},{{model.lon}}(Spielplatz)">Google Maps</a>
    </p>
  </div>
</li>
